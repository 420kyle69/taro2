{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es5",
        "allowJs": true,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/phaser/types",
            "ts/types"
        ],
        "types": [
            "node",
			"jquery",
            "Phaser"
        ]
	},
    "exclude": [
        "node_modules"
    ]
}
